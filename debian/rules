#!/usr/bin/make -f

# Verbose mode
#export DH_VERBOSE=1

clean:
	dh_testdir
	dh_testroot
	dh_clean
	rm -rf build
	find . -type f -name '*.pyc' | xargs rm -f
build:
	dh_testdir
	python setup.py install --root $(CURDIR)/debian/python-django-inline-ordering

install:
	dh_testdir
	dh_installdirs

binary-indep: install

binary-arch: install
	dh_install
	dh_installdocs
#	dh_installchangelogs
	dh_compress
	dh_fixperms
	dh_pysupport
	dh_gencontrol
	dh_installdeb
	dh_md5sums
	dh_builddeb -- -Z lzma -z9

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary

